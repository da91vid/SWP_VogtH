@model Web_Grundlagen.Models.User

@{
    ViewData["Title"] = "Registration";
    String name = "";
    if(@Model.Email == null)
    {
        name = "registration";
    }else
    {
        name = "confirmuserchanges";
        <td>* - Id: </td>
        <td><input type="id" asp-for="Id" /></td>
        <td><span asp-validation-for="Id"></span></td>
    }
    ///TODO DA WEITER MACHEN
}
<form asp-controller="user" asp-action="@name" method="post">
    <table>
        <thead>
            <tr>
                <th colspan="2">Registrierungsformular</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>* - Name: </td>
                <td><input type="text" asp-for="Name" placeholder="@Model.Name"/></td>
                <td><span asp-validation-for="Name"></span></td>
            </tr>
            <tr>
                <td>* - Email: </td>
                <td><input type="email" asp-for="Email"/></td>
                <td><span asp-validation-for="Email"></span></td>
            </tr>
            <tr>
                <td>* - Passwort: </td>
                <td><input type="test" asp-for="Password"/></td>
                <td><span asp-validation-for="Password"></span></td>
            </tr>
            <tr>
                <td>* - Passwort wiederholung: </td>
                <td><input type="test" asp-for="PasswordRetype" /></td>
                <td><span asp-validation-for="PasswordRetype"></span></td>
            </tr>
            <tr>
                <td>Geburtsdatum: </td>
               <td><input type="date" asp-for="Birthdate"/></td>
                <td><span asp-validation-for="Birthdate"></span></td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit" value="senden"/></td>
                <td colspan="2"><input type="reset" value="abbrechen" /></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <th colspan="2">* - Felder sind Pflichtfelder</th>
            </tr>
        </tfoot>
    </table>
</form>